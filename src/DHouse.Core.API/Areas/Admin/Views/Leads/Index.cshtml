@model IEnumerable<DHouse.Core.Domain.Entities.Lead>
@{
    Layout = "_Layout"; ViewData["Title"] = "Leads";
}

<div class="flex items-center justify-between mb-4">
    <h1 class="text-xl font-semibold">Leads</h1>
    <a class="px-3 py-2 rounded bg-slate-900 text-white" href="/admin/leads/novo">Novo Lead</a>
</div>

<div class="mb-4 flex gap-2">
    @foreach (var s in Enum.GetValues(typeof(DHouse.Core.Domain.Enums.StatusLead)).Cast<DHouse.Core.Domain.Enums.StatusLead>())
    {
        <button class="px-3 py-1 rounded border"
                hx-get="/admin/leads?status=@s"
                hx-target="#leadsTable"
                hx-push-url="true">
            @s
        </button>
    }
    <button class="px-3 py-1 rounded border"
            hx-get="/admin/leads"
            hx-target="#leadsTable"
            hx-push-url="true">
        Todos
    </button>
</div>

<div id="leadsTable">
    @await Html.PartialAsync("_LeadsTable", Model)
</div>
