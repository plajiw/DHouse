@model DHouse.Core.Domain.Entities.Lead
@{
    string cls = Model.Status switch
    {
        DHouse.Core.Domain.Enums.StatusLead.Novo => "bg-blue-100 text-blue-800",
        DHouse.Core.Domain.Enums.StatusLead.EmContato => "bg-yellow-100 text-yellow-800",
        DHouse.Core.Domain.Enums.StatusLead.Qualificado => "bg-emerald-100 text-emerald-800",
        DHouse.Core.Domain.Enums.StatusLead.EmNegociacao => "bg-purple-100 text-purple-800",
        DHouse.Core.Domain.Enums.StatusLead.Convertido => "bg-green-100 text-green-800",
        DHouse.Core.Domain.Enums.StatusLead.Perdido => "bg-red-100 text-red-800",
        _ => "bg-slate-100 text-slate-800"
    };
}
<span class="px-2 py-1 rounded text-xs @cls">@Model.Status</span>
