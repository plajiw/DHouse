@{ Layout = "_Layout"; ViewData["Title"] = "Login"; }
<div class="max-w-sm mx-auto mt-20 bg-white p-6 rounded-xl shadow">
  <h1 class="text-lg font-semibold mb-4">Acesso ao Admin</h1>
  <form method="post" action="/admin/auth/login">
    @Html.AntiForgeryToken()
    <label class="block mb-2 text-sm">E-mail</label>
    <input name="email" type="email" class="w-full border rounded px-3 py-2 mb-4" required />
    <label class="block mb-2 text-sm">Senha</label>
    <input name="senha" type="password" class="w-full border rounded px-3 py-2 mb-4" required />
    <button class="w-full bg-slate-900 text-white rounded py-2">Entrar</button>
  </form>
</div>
